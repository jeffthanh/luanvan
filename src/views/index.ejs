<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark" style="background-color: #FFACB7;">
            <a class="navbar-brand" href="/"><img src="images/logo.jpg" alt="" height="50"></a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggler8"
                aria-controls="navbarToggler8" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarToggler8">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link active" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/create">Create Person</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <body>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Gmail</th>
                    <th>Address</th>
                    <th>City</th>
                    <th>Phone</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <% listPersons.forEach(function(user,index) {%>
                    <tr>
                        <td>
                            <%= user.Name%>
                        </td>
                        <td>
                            <%= user.Gmail%>
                        </td>
                        <td>
                            <%= user.Address%>
                        </td>
                        <td>
                            <%= user.City%>
                        </td>
                        <td>
                            <%= user.Phone%>
                        </td>
                        <td>
                            <button>Edit</button>
                            <button>Delete</button>
                        </td>
                    </tr>

                    <%}); %>
            </tbody>
        </table>
    </body>

    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
        integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
